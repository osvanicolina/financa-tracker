<% if @tracked_stocks.any? %>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Ticker</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% @tracked_stocks.each do |stock| %>
                <tr>
                    <td>
                        <%= stock.ticker %>
                    </td>
                    <td>
                        <%= stock.name %>
                    </td>
                    <td>
                        <%= stock.last_price %>
                    </td>
                    <td>
                        <% if current_user.id == @user.id %>
                            <%= link_to 'Remove', user_stock_path(user: current_user, id: stock.id), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>